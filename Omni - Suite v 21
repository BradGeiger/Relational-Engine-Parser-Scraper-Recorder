<div class="main-layout">
    <div class="sidebar">
        <div style="padding:20px; font-weight:bold; border-bottom:1px solid #3c4043;">PATH RECONSTRUCTION LEDGER</div>
        <div class="path-log" id="path-tracer">
            <p style="color:#888;">Select an entity to reconstruct its acquisition path.</p>
        </div>
        <div id="rebuild-queue" style="padding:15px; font-size:10px; color:#aaa; background:#1a1b1e;">
            <strong>Optimized Rebuild Queue:</strong>
            <div id="queue-list">Empty</div>
        </div>
    </div>

    <div class="workspace">
        <div class="node-grid" id="main-grid"></div>
        <div id="log-output" style="font-family:monospace; font-size:11px; background:#000; color:#0f0; padding:10px; border-radius:8px; height:120px; overflow-y:auto;">
            > Lineage Engine Standby...
        </div>
    </div>
</div>

<script>
    let dirHandle;
    let vault = { entities: {}, paths: {} };
    let selectedId = null;

    async function linkVault() {
        dirHandle = await window.showDirectoryPicker();
        const vFile = await dirHandle.getFileHandle('scrape_vault.json', { create: true });
        const text = await (await vFile.getFile()).text();
        vault = text ? JSON.parse(text) : { entities: {}, paths: {} };
        renderGrid();
        log("Vault Linked. Provenance vectors loaded.");
    }

    function renderGrid() {
        const grid = document.getElementById('main-grid');
        grid.innerHTML = '';
        Object.keys(vault.entities).forEach(id => {
            const e = vault.entities[id];
            const card = document.createElement('div');
            card.className = `node-card ${selectedId === id ? 'active' : ''}`;
            card.onclick = () => tracePath(id);
            card.innerHTML = `
                <div style="font-size:10px; color:var(--path); font-weight:bold;">${e.subject}</div>
                <div style="font-weight:bold;">${id}</div>
                <div style="font-size:12px; margin-top:5px; color:#444;">${e.object.value}</div>
            `;
            grid.appendChild(card);
        });
    }

    function tracePath(id) {
        selectedId = id;
        const tracer = document.getElementById('path-tracer');
        const path = vault.paths[id] || ["Unknown Origin"];
        
        tracer.innerHTML = `<strong>Path for: ${id}</strong><hr style="border:1px solid #444; margin:10px 0;">`;
        path.forEach((step, idx) => {
            const div = document.createElement('div');
            div.className = 'path-step';
            div.innerText = step;
            tracer.appendChild(div);
        });
        renderGrid();
    }

    async function optimizeRecovery() {
        log("Calculating Shortest-Path Recovery Queue...");
        // Logic: Sort sources by how many entities they define
        const sourceWeights = {};
        Object.values(vault.entities).forEach(e => {
            const src = e.provenance || "Manual";
            sourceWeights[src] = (sourceWeights[src] || 0) + 1;
        });

        const sortedQueue = Object.entries(sourceWeights).sort((a,b) => b[1] - a[1]);
        const queueList = document.getElementById('queue-list');
        queueList.innerHTML = sortedQueue.map(([src, count]) => `<div>[Weight ${count}] ${src.substring(0,30)}...</div>`).join('');
        
        log(`Recovery Plan: Re-scan ${sortedQueue.length} sources for maximum hydration.`);
    }

    function log(m) {
        const o = document.getElementById('log-output');
        o.innerHTML += `<div>> ${m}</div>`;
        o.scrollTop = o.scrollHeight;
    }
</script>
</body>
